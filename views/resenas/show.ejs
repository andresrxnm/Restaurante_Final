<%- include('../partials/adminHeader', { title: 'Detalle de la Reseña' }) %>

<div class="container mt-5">
  <h2 class="text-danger mb-4"><i class="fas fa-comment"></i> Detalle de la Reseña</h2>

  <div class="card shadow-lg border-0 rounded-lg">
    <div class="card-body">
      <h5><strong>Restaurante:</strong> <%= resena.restaurante_nombre %></h5>
      <p><strong>Reseñada por:</strong> <%= resena.usuario_nombre %></p>
      <p><strong>Comentario:</strong> <%= resena.comentario %></p>
      <p><strong>Calificación:</strong> <%= resena.calificacion %> <i class="fas fa-star text-warning"></i></p>
      <p><strong>Fecha de Reseña:</strong> <%= new Date(resena.fecha_creacion).toLocaleDateString() %></p>

      <div class="mt-4 d-flex gap-2">
        <a href="/resenas" class="btn btn-secondary">
          <i class="fas fa-arrow-left"></i> Volver al listado
        </a>
        <a href="/resenas/<%= resena.id %>/edit" class="btn btn-warning">
          <i class="fas fa-edit"></i> Editar
        </a>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
