<%- include('../partials/adminHeader') %>

<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-dark font-weight-bold mb-0">
      <i class="fas fa-users text-danger"></i> Gestión de Usuarios
    </h2>
    <a href="/usuarios/create" class="btn btn-danger shadow-sm">
      <i class="fas fa-plus"></i> Nuevo Usuario
    </a>
  </div>

  <div class="card shadow-lg border-0 rounded-lg">
    <div class="card-body">
      <% if (usuarios && usuarios.length > 0) { %>
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead class="thead-dark">
              <tr>
                <th>ID</th>
                <th>Nombre de usuario</th>
                <th>Correo</th>
                <th>Contraseña</th>
                <th class="text-center">Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% usuarios.forEach(usuario => { %>
                <tr>
                  <td><%= usuario.id %></td>
                  <td><%= usuario.username %></td>
                  <td><%= usuario.email %></td>
                  <td><%= usuario.password %></td>
                  <td class="text-center">
                    <div class="btn-group btn-group-sm">
                      <a href="/usuarios/<%= usuario.id %>" class="btn btn-info" data-toggle="tooltip" title="Ver">
                        <i class="fas fa-eye"></i>
                      </a>
                      <a href="/usuarios/<%= usuario.id %>/edit" class="btn btn-warning" data-toggle="tooltip" title="Editar">
                        <i class="fas fa-edit"></i>
                      </a>
                      <form action="/usuarios/<%= usuario.id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger" data-toggle="tooltip" title="Eliminar" onclick="confirmarEliminacion(event, 'usuario')">
                          <i class="fas fa-trash-alt"></i>
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="alert alert-warning text-center">
          <i class="fas fa-exclamation-circle"></i> No hay usuarios registrados.
          <a href="/usuarios/create" class="alert-link"> Crear uno nuevo</a>.
        </div>
      <% } %>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
