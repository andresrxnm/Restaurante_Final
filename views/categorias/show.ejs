<%- include('../partials/adminHeader', { title: 'Detalle de la Categoría' }) %>

<div class="container mt-5">
  <h2 class="text-danger mb-4"><i class="fas fa-tag"></i> Detalle de la Categoría</h2>

  <div class="card shadow-lg border-0 rounded-lg">
    <div class="card-body">
      <div class="mb-3">
        <p><strong>ID:</strong> <%= categoria.id %></p>
        <p><strong>Nombre:</strong> <%= categoria.nombre %></p>
      </div>

      <div class="mt-4 d-flex justify-content-between">
        <a href="/categorias" class="btn btn-secondary">
          <i class="fas fa-arrow-left"></i> Volver al listado
        </a>
        <a href="/categorias/<%= categoria.id %>/edit" class="btn btn-warning">
          <i class="fas fa-edit"></i> Editar
        </a>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
